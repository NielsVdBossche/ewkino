CC=g++ -Wall -Wextra -O3
CFLAGS= -Wl,--no-as-needed
LDFLAGS=`root-config --glibs --cflags`
SOURCES= eventcategorizer.cc src/eventSelections.cc src/eventCategorization.cc ../../codeLibrary.o 
OBJECTS=$(SOURCES:.cc=.o)
EXECUTABLE=eventcategorizer

all: 
	$(CC) $(CFLAGS) $(SOURCES) $(LDFLAGS) -o $(EXECUTABLE)
        
clean:
	rm -rf *o $(EXECUTABLE)
