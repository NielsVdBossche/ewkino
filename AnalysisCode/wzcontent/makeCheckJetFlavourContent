CC=g++ -Wall -Wextra -O3
CFLAGS= -Wl,--no-as-needed
LDFLAGS=`root-config --glibs --cflags`
SOURCES= checkJetFlavourContent.cc ../eventselection/src/eventSelections.cc ../../codeLibrary.o 
OBJECTS=$(SOURCES:.cc=.o)
EXECUTABLE=checkJetFlavourContent

all: 
	$(CC) $(CFLAGS) $(SOURCES) $(LDFLAGS) -o $(EXECUTABLE)
	
clean:
	rm -rf *o $(EXECUTABLE)
