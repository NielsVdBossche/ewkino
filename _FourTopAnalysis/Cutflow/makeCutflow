CC=g++ -Wall -Wextra -O3 -g 
CFLAGS= -Wl,--no-as-needed,-lpthread
CXXFLAGS = -std=gnu++17
LDFLAGS=`root-config --glibs --cflags` -lTMVA
SOURCES= cutflow.cc ../../codeLibrary.o ../_FourTop/src/*.cc ../FourTopEventHandling/src/*.cc ../histogramSetups/*.cc ../additionalTools/src/*.cc ../TopQuarkReconstruction/src/*.cc ../../GenLevelStudies/src/*.cc
OBJECTS=$(SOURCES:.cc=.o)
EXECUTABLE=cutflowExec

all: 
	$(CC) $(CFLAGS) $(SOURCES) $(LDFLAGS) -o $(EXECUTABLE)
	
clean:
	rm -rf *o $(EXECUTABLE)
