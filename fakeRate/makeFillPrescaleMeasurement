CC=g++ -Wall -Wextra -O3
CFLAGS= -Wl,--no-as-needed
LDFLAGS=`root-config --glibs --cflags`
SOURCES= fillPrescaleMeasurement.cc src/prescaleMeasurementTools.cc src/progressTracker.cc ../codeLibrary.o
OBJECTS=$(SOURCES:.cc=.o)
EXECUTABLE=fillPrescaleMeasurement

all:
	$(CC) $(CFLAGS) $(SOURCES) $(LDFLAGS) -o $(EXECUTABLE)

clean:
	rm -rf *o $(EXECUTABLE)
