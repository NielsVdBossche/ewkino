CC=g++ -Wall -Wextra -O3
CFLAGS= -Wl,--no-as-needed,-lTMVA
LDFLAGS=`root-config --glibs --cflags`
SOURCES= singlehistplotter.cc ../../codeLibrary.o ../eventselection/src/eventSelections.cc ../eventselection/src/eventFlattening.cc 
OBJECTS=$(SOURCES:.cc=.o)
EXECUTABLE=singlehistplotter

all: 
	$(CC) $(CFLAGS) $(SOURCES) $(LDFLAGS) -o $(EXECUTABLE)

clean:
	rm -rf *o $(EXECUTABLE)
