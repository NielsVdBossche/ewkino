CC=g++ -Wall -Wextra -O3
CFLAGS= -Wl,--no-as-needed,-lTMVA
LDFLAGS=`root-config --glibs --cflags`
SOURCES= wpselection.cc ../eventselection/src/eventFlattening.cc ../eventselection/src/eventSelections.cc ../../codeLibrary.o
OBJECTS=$(SOURCES:.cc=.o)
EXECUTABLE=wpselection

all:
	$(CC) $(CFLAGS) $(SOURCES) $(LDFLAGS) -o $(EXECUTABLE)

clean:
	rm -rf *o $(EXECUTABLE)
